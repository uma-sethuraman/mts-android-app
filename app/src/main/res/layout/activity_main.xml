<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:id = "@+id/drawer_layout">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepgback"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/homePageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:autoLink="phone"
        android:text="Sri Meenakshi Temple \n 17130 Mclean Road, \n Pearland, TX, USA 77584 \n (281) 489-0358  |  Ext. 100 or 110"
        android:textAlignment="center"
        android:textColor="#EEC86D"
        android:textColorLink="#EEC86D"
        android:textSize="22sp"
        android:textStyle="bold"
        app:fontFamily="@font/arima_madurai_bold" />


    <ViewFlipper
        android:id="@+id/v_flip"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/homePageTitle"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/timingsButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/darkblue"
        android:text="Temple \nTimings"
        android:textAlignment="center"
        android:textColor="#EEC86D"
        android:textStyle="bold"
        android:textSize="17sp"
        app:fontFamily="@font/arima_madurai_bold" />

    <Button
        android:id="@+id/directionsButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/darkblue"
        android:text="Temple \nDirections"
        android:textAlignment="center"
        android:textColor="#EEC86D"
        android:textStyle="bold"
        android:textSize="17sp"
        app:fontFamily="@font/arima_madurai_bold" />

    <Button
        android:id="@+id/calendarButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/darkblue"
        android:text="Calendar"
        android:textAlignment="center"
        android:textColor="#EEC86D"
        android:textStyle="bold"
        android:textSize="17sp"
        app:fontFamily="@font/arima_madurai_bold" />

    <Button
        android:id="@+id/dressCodeButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/darkblue"
        android:text="Dress Code"
        android:textAlignment="center"
        android:textColor="#EEC86D"
        android:textStyle="bold"
        android:textSize="17sp"
        app:fontFamily="@font/arima_madurai_bold" />

    <Button
        android:id="@+id/websiteButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/darkblue"
        android:text="Temple \nWebsite"
        android:textAlignment="center"
        android:textColor="#EEC86D"
        android:textStyle="bold"
        android:textSize="17sp"
        app:fontFamily="@font/arima_madurai_bold" />

    <Button
        android:id="@+id/subscribeButton"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/darkblue"
        android:text="Subscribe \n for emails!"
        android:textAlignment="center"
        android:textColor="#EEC86D"
        android:textStyle="bold"
        android:textSize="17sp"
        app:fontFamily="@font/arima_madurai_bold" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@android:color/holo_blue_bright"
        app:itemTextAppearance="@style/Style_MenuItems"
        app:itemTextColor="#EEC86D"
        app:menu="@menu/nav_menu"></com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>