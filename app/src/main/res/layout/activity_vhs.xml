<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:id = "@+id/drawer_layout_vhs">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepgback"
        tools:context=".VHS">


        <TextView
            android:id="@+id/vhsHeader"
            android:layout_width="400dp"
            android:layout_height="125dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:text="@string/vhs_header"
            android:textAlignment="center"
            android:textColor="#EEC86D"
            android:textSize="32sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />

        <TextView
            android:id="@+id/vhsInfo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/vhsHeader"
            android:layout_marginTop="20dp"
            android:text="Registration Open Online\nAges 4 and up"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            app:fontFamily="@font/arima_madurai_bold" />

        <TextView
            android:id="@+id/vhsInfo2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/vhsInfo"
            android:layout_marginTop="40dp"
            android:text="For more information, \nvisit the VHS website below"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            app:fontFamily="@font/arima_madurai_bold" />

        <Button
            android:id="@+id/VHSButton"
            android:layout_width="365dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="72dp"
            android:background="@drawable/darkblue"
            android:gravity="center"
            android:text="VHS Website"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#EEC86D"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />


    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView_vhs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@android:color/holo_blue_bright"
        app:itemTextAppearance="@style/Style_MenuItems"
        app:itemTextColor="#EEC86D"
        app:menu="@menu/nav_menu"></com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>