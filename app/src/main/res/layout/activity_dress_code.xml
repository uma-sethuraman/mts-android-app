<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:id = "@+id/drawer_layout_dresscode">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepgback"
        tools:context=".DressCode">


        <TextView
            android:id="@+id/dressCodeHeader"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="35dp"
            android:text="@string/dress_code_header"
            android:textAlignment="center"
            android:textColor="#EEC86D"
            android:textSize="37sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_below="@id/dressCodeHeader"
            android:text="@string/dress_code"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView_dresscode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@android:color/holo_blue_bright"
        app:itemTextAppearance="@style/Style_MenuItems"
        app:itemTextColor="#EEC86D"
        app:menu="@menu/nav_menu"></com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>