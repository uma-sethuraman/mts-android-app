<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:id = "@+id/drawer_layout_pooja">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepgback"
        tools:context=".Pooja">


        <TextView
            android:id="@+id/poojaHeader"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="35dp"
            android:text="@string/pooja_header"
            android:textAlignment="center"
            android:textColor="#EEC86D"
            android:textSize="37sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />

        <Button
            android:id="@+id/poojaEventsButton"
            android:layout_width="365dp"
            android:layout_height="119dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="390dp"
            android:background="@drawable/darkblue"
            android:gravity="center"
            android:text="Pooja Events/Payments"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#EEC86D"
            android:textSize="26sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />

        <Button
            android:id="@+id/poojaFormButton"
            android:layout_width="365dp"
            android:layout_height="119dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="225dp"
            android:background="@drawable/darkblue"
            android:gravity="center"
            android:text="Private Pooja Bookings"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#EEC86D"
            android:textSize="26sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />

        <Button
            android:id="@+id/poojaMaterialsButton"
            android:layout_width="365dp"
            android:layout_height="119dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/darkblue"
            android:gravity="center"
            android:text="List of Pooja Items"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#EEC86D"
            android:textSize="26sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />



    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView_pooja"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@android:color/holo_blue_bright"
        app:itemTextAppearance="@style/Style_MenuItems"
        app:itemTextColor="#EEC86D"
        app:menu="@menu/nav_menu"></com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>