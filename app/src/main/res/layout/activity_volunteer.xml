<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:id = "@+id/drawer_layout_volunteer">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepgback"
        tools:context=".Volunteer">

        <TextView
            android:id="@+id/volunteerHeader"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:text="@string/volunteer_header"
            android:textAlignment="center"
            android:textColor="#EEC86D"
            android:textSize="32sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />

        <Button
            android:id="@+id/VolunteerButton"
            android:layout_width="365dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="398dp"
            android:background="@drawable/darkblue"
            android:gravity="center"
            android:text="Volunteer\nRegistration Form"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#EEC86D"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />

        <TextView
            android:id="@+id/formInfo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/VolunteerButton"
            android:layout_marginTop="-370dp"
            android:autoLink="email"
            android:text="For more information, \nplease email \nvolunteer@emeenakshi.org"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="27sp"
            app:fontFamily="@font/arima_madurai_bold" />

        <TextView
            android:id="@+id/whatsappInfo"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_below="@id/formInfo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="69dp"
            android:layout_marginBottom="46dp"
            android:text="Join our WhatsApp volunteer group:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="27sp"
            app:fontFamily="@font/arima_madurai_bold" />

        <Button
            android:id="@+id/whatsAppButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="296dp"
            android:layout_marginLeft="296dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="47dp"
            android:background="@drawable/whatsapp"
            android:gravity="center"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#EEC86D"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="@font/arima_madurai_bold" />



    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView_volunteer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@android:color/holo_blue_bright"
        app:itemTextAppearance="@style/Style_MenuItems"
        app:itemTextColor="#EEC86D"
        app:menu="@menu/nav_menu"></com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>