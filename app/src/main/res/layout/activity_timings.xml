<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:id = "@+id/drawer_layout_timings">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepgback"
    tools:context=".Timings">


    <TextView
        android:id="@+id/timingsTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/temple_timings"
        android:textAlignment="center"
        android:textColor="#EEC86D"
        android:textSize="40sp"
        android:textStyle="bold"
        app:fontFamily="@font/arima_madurai_bold" />

    <TextView
        android:id="@+id/monToThurs"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/timingsTitle"
        android:text="Monday to Thursday:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#E43308"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/arima_madurai_bold" />

    <TextView
        android:id="@+id/monToThursTimes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/monToThurs"
        android:layout_marginTop="10dp"
        android:text="8:30 AM to 1:00 PM \n5:00 PM to 8:30 PM"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/arima_madurai_bold" />

    <TextView
        android:id="@+id/fridays"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/monToThursTimes"
        android:text="Friday:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#D83107"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/arima_madurai_bold" />

    <TextView
        android:id="@+id/friTimes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/fridays"
        android:layout_marginTop="10dp"
        android:text="8:30 AM to 1:00 PM \n5:00 PM to 9:00 PM"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/arima_madurai_bold" />

    <TextView
        android:id="@+id/weekends"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/friTimes"
        android:text="Weekends and \nNational Holidays:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#E43308"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/arima_madurai_bold" />

    <TextView
        android:id="@+id/weekendTimes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/weekends"
        android:layout_marginTop="10dp"
        android:text="8:30 AM to 8:30 PM"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        app:fontFamily="@font/arima_madurai_bold" />



</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView_timings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@android:color/holo_blue_bright"
        app:itemTextAppearance="@style/Style_MenuItems"
        app:itemTextColor="#EEC86D"
        app:menu="@menu/nav_menu"></com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>